                app.root.current = 'manageprofiles'

        TextInput:
            id: textin
            text: root.usr_to_edit
            size_hint: .26, .075
            pos_hint: {'x': .23, 'y': .58}
            multiline: False

        Label:
            text: 'User Name:'
            font_size: 25
            pos_hint: {'x': -.38, 'y': .12}

        Label:
            text: ' Language \nPreference:'
            font_size: 23
            pos_hint: {'x': -.38, 'y': -.13}

        Spinner:
            id: langspin
            text: root.edit_lang
            values: ('English', 'Spanish', 'French', 'Cantonese', 'Dutch', 'Mandarin', 'Haitian Creole')
