#kivy 1.9.0

<Send1Button>:
    size: 250, 100
    #pos: center_x + width / 4, center_y - height / 4

<Send2Button>:
    size: 250, 100

<PtWidg>:

    Image:
        center_x: root.width / 4
        top: root.top - 150
        source: 'SensoryWalkLogo.png'
        height: dp(300)
        width: dp(300)

    Send1Button:
        center_x: root.width - root.width / 4
        top: root.top - 100
        text: 'Toggle LED on MSP430 1'
        font_size: 16

    Send2Button:
        center_x: root.width - root.width / 4
        top: root.top - 250
        text: 'Toggle LED on MSP430 2'
        font_size: 16

    Label:
        center_x: root.width / 2
        center_y: root.height - self.height / 2
        text: 'Carter School Sensory Walk'
        font_size: 40
